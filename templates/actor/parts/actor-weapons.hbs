<ol class="mm-item-list">
  <li class="flexrow item mm-item-header">
    <span>Weapons</span>
    <hr />
    <div class="item-controls">
      <a
        class="item-control item-create"
        title="Create item"
        data-type="weapon"
      >
        <i class="fas fa-plus"></i>
      </a>
    </div>
  </li>
  {{#each weapons as |item id|}}
    <li class="flexrow item mm-item" data-item-id='{{item._id}}'>
      <div class="item-name mm-item-name">
        <a class="rollable" data-roll-type="item" data-damagetype="{{item.system.damageType}}">{{item.name}} </a>
      </div>
      <div class="item-controls">
        <a
          class="item-control item-edit"
          title="{{localize 'DOCUMENT.Edit' type="weapon"}}"
        >
          <i class="fas fa-edit"></i>
        </a>
        <a
          class="item-control item-delete"
          title="{{localize 'DOCUMENT.Delete' type="weapon"}}"
        >
          <i class="fas fa-trash"></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>
