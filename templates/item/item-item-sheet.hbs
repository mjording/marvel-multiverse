<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <div class="flexcol -gap-sm">
      <div class="mm-styled-field -lg -img -fill">
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
        <div class="mm-styled-input">
          <input name="name" type="text" value="{{item.name}}" placeholder="Name"/>
        </div>
      </div>
      <div class="flexrow -gap-sm">
        <div class="mm-styled-field -flex-relative">
          <label class="mm-styled-label -align-left"><span>Quantity</span></label>
          <div class="mm-styled-input">
            <input type="text" name="system.quantity" value="{{system.quantity}}" data-dtype="Number" />
          </div>
        </div>
        <div class="mm-styled-field -flex-relative">
          <label class="mm-styled-label -align-left"><span>Weight</span></label>
          <div class="mm-styled-input">
            <input type="text" name="system.weight" value="{{system.weight}}" data-dtype="Number" />
          </div>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs mm-tabs -two" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="attributes">Attributes</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{!-- To render inline rolls in a TinyMCE editor, you need to pass the parent actor's (if any) roll data to the
      rollData prop. --}}
      <div class="mm-styled-field -fill">
        <label class="mm-styled-label -align-left rollable" for="system.description" data-label="description"><span>Description</span></label>
        <div class="mm-styled-input">
          {{editor system.description target="system.description" button=false engine="prosemirror" collaborate=false editable=editable}}
        </div>
      </div>
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">
      {{!-- As you add new fields, add them in here! --}}
      <div class="flexcol gap-sm">
        <div class="mm-styled-field -fill">
          <label class="mm-styled-label -align-left"><span>Roll Formula</span></label>
          <div class="mm-styled-input">
            <div class="plain-text">{{system.formula}}</div>
          </div>
        </div>
        <div class="flexrow -nowrap -gap-sm">
          <div class="mm-styled-field -flex-relative">
            <label class="mm-styled-label -align-left"><span># of Dice</span></label>
            <div class="mm-styled-input">
              <input type="text" name="system.roll.diceNum" value="{{system.roll.diceNum}}" data-dtype="Number" />
            </div>
          </div>
          <div class="mm-styled-field -flex-relative">
            <label class="mm-styled-label"><span>Die Size</span></label>
            <div class="mm-styled-input">
              <input type="text" name="system.roll.diceSize" value="{{system.roll.diceSize}}" data-dtype="String" />
            </div>
          </div>
          <div class="mm-styled-field">
            <label class="mm-styled-label -align-right"><span>Roll Modifier</span></label>
            <div class="mm-styled-input">
              <input type="text" name="system.roll.diceBonus" value="{{system.roll.diceBonus}}" data-dtype="String" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</form>

{{log system}}
