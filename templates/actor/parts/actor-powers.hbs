{{#each powers as |powers powerSet|}}
  {{#if powers}}
    <ol class="mm-item-list">
      <li class="flexrow item mm-item-header">
        <span>{{localize "MARVEL_MULTIVERSE.Item.Power.PowerSET" set=powerSet}}</span>
        <hr />
        <div class="item-controls">
          <a
            class="item-control item-create"
            title="{{localize 'DOCUMENT.Create' type="Power"}}"
            data-type="power"
            data-power-set="{{powerSet}}"
          >
            <i class="fas fa-plus"></i>
          </a>
        </div>
      </li>
      {{#each powers as |item id|}}
        <li class="flexrow item mm-item" data-item-id="{{item._id}}">
          <div class="item-name mm-item-name">
            <a class="rollable" data-roll-type="item">
              <span>{{item.name}}</span>
              {{#if item.system.cost }}
                <span>Cost: {{item.system.cost}}</span>
              {{/if}}
            </a>
          </div>
          <div class="item-controls">
            {{#if item.system.attackAbility}}
              <a
                class="item-control rollable"
                title="Roll Power"
                data-roll="{1d6,1dm,1d6}+@abilities.{{item.system.attackAbility}}.value"
                data-power="{{item.name}}"
                data-powerSet="{{item.system.powerSet}}"
                data-label="{{item.system.attackAbility}}",
                data-damageType="{{item.system.damageType}}"
              >
                <i class="fa-regular fa-dice"></i>
              </a>
            {{/if}}
            <a
              class="item-control item-edit"
              title="{{localize 'DOCUMENT.Edit' type="power"}}"
            >
              <i class="fas fa-edit"></i>
            </a>
            <a
              class="item-control item-delete"
              title="{{localize 'DOCUMENT.Delete' type="power"}}"
            >
              <i class="fas fa-trash"></i>
            </a>
          </div>
        </li>
      {{/each}}
    </ol>
  {{/if}}
{{/each}}
